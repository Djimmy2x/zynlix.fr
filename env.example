# Configuration de la base de données
DATABASE_URL="postgresql://username:password@host:port/database"

# Configuration de l'application
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Sécurité - Générer des clés sécurisées
SESSION_SECRET="votre_session_secret_tres_securise_32_caracteres_minimum"
JWT_SECRET="votre_jwt_secret_tres_securise_32_caracteres_minimum"

# Authentification Admin
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="votre_mot_de_passe_admin_securise"

# Configuration des sessions (optionnel)
SESSION_NAME="zynlix.sid"
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_MAXAGE=86400000 